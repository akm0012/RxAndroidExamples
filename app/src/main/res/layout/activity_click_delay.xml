<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickDelayActivity">

    <Button
        android:id="@+id/clickMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".35" />

    <TextView
        android:id="@+id/beforeThrottleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Before Throttle: 0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/clickMeButton"
        app:layout_constraintStart_toStartOf="@id/clickMeButton"
        app:layout_constraintTop_toBottomOf="@id/clickMeButton" />

    <TextView
        android:id="@+id/afterThrottleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="After Throttle: 0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/clickMeButton"
        app:layout_constraintStart_toStartOf="@id/clickMeButton"
        app:layout_constraintTop_toBottomOf="@id/beforeThrottleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>